<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/dayScroller"
        android:layout_below="@+id/imageButton8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageButton9"
        android:layout_alignEnd="@+id/imageButton9">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="24"
            android:columnCount="8"
            android:orientation="horizontal">

        </GridLayout>

    </ScrollView>

    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/imageButton8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/imageButton9"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:id="@+id/calendar_view"
        android:layout_alignBottom="@+id/imageButton8"
        android:layout_toRightOf="@+id/imageButton8"
        android:layout_toEndOf="@+id/imageButton8"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/currDate"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/imageButton9"
        android:layout_toLeftOf="@+id/imageButton9"
        android:layout_toRightOf="@+id/calendar_view"
        android:layout_toEndOf="@+id/calendar_view" />

</RelativeLayout>