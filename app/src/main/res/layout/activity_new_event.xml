<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/newEventScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:gravity="center"
        android:id="@+id/currDate"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/timepicker_container"
        android:layout_toEndOf="@+id/timepicker_container"
        android:layout_above="@+id/timeSelectors" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:id="@+id/eventName"
        android:text="Name"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/saveEvent"
        android:layout_alignEnd="@+id/saveEvent" />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/saveEvent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/timeSelectors"
        android:layout_above="@+id/eventName"
        android:layout_alignRight="@+id/saveEvent"
        android:layout_alignEnd="@+id/saveEvent"
        android:layout_marginBottom="54dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Start Time"
            android:id="@+id/startTime"
            android:layout_marginLeft="10dp"
            style="@style/Widget.AppCompat.Spinner"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="End Time"
            android:id="@+id/endTime"
            android:layout_marginLeft="75dp"
            style="@style/Widget.AppCompat.Spinner"
            android:clickable="true" />

    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventContent"
        android:text="Content"
        android:gravity="top"
        android:layout_alignBottom="@+id/timepicker_container"
        android:layout_below="@+id/eventName"
        android:layout_toLeftOf="@+id/saveEvent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/timepicker_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/prevArrow" />

</RelativeLayout>
